<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ColorThemes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="OverlayThemeLime" parent="Theme.ColorThemes">
        <item name="colorPrimary">@color/md_lime_500</item>
        <item name="colorPrimaryVariant">@color/md_lime_700</item>
        <item name="colorSecondary">@color/md_amber_A400</item>
    </style>

    <style name="OverlayThemeRed" parent="Theme.ColorThemes">
        <item name="colorPrimary">@color/md_red_500</item>
        <item name="colorPrimaryVariant">@color/md_red_700</item>
        <item name="colorSecondary">@color/md_yellow_A400</item>
    </style>

    <style name="OverlayThemeGreen" parent="Theme.ColorThemes">
        <item name="colorPrimary">@color/md_green_500</item>
        <item name="colorPrimaryVariant">@color/md_green_700</item>
        <item name="colorSecondary">@color/md_pink_A400</item>
    </style>

    <style name="OverlayThemeBlue" parent="Theme.ColorThemes">
        <item name="colorPrimary">@color/md_blue_500</item>
        <item name="colorPrimaryVariant">@color/md_blue_700</item>
        <item name="colorSecondary">@color/md_turquoise_A400</item>
    </style>
</resources>